<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="50dp"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewChooseList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wähle eine Vokabelliste:"
        android:textSize="18sp"
        android:layout_marginBottom="0dp"/>

    <Spinner
        android:id="@+id/listSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:minHeight="60dp" />

    <!-- NEU: RadioGroup für die Übersetzungsrichtung -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Übersetzungsrichtung:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/directionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radioMixed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Gemischt"
            android:checked="true" /> <!-- Standardauswahl -->

        <RadioButton
            android:id="@+id/radioGermanToEnglish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DE → EN" />

        <RadioButton
            android:id="@+id/radioEnglishToGerman"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="EN → DE" />
    </RadioGroup>

    <!-- ... Rest deiner Layout-Datei ... -->

    <TextView
        android:id="@+id/wordToTranslateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="Lade Wort..."
        android:textSize="24sp" />

    <EditText
        android:id="@+id/translationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Übersetzung eingeben"
        android:inputType="text"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Prüfen" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
